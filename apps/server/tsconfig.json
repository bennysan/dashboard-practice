{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2020",
    "moduleResolution": "NodeNext",
    "strict": true,
    "noImplicitAny": true,
    "module": "NodeNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
